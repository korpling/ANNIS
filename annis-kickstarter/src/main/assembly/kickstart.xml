
<assembly>
  <id>distribution</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
  <files>
    <file>
      <source>target/annis-kickstarter-${project.version}.jar</source>
      <outputDirectory>/</outputDirectory>
      <destName>annis-kickstarter.jar</destName>
      <fileMode>0774</fileMode>
    </file>
  </files>
  <fileSets>
    <!-- overwrite the database.properties -->
    <fileSet>
      <directory>src/main/resources/</directory>
      <includes>
        <include>database.properties</include>
        <include>override-web.xml</include>
      </includes>
      <outputDirectory>/conf/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../</directory>
      <includes>
        <include>NOTICE</include>
        <include>LICENSE</include>
        <include>CHANGELOG</include>
      </includes>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>THIRD-PARTY</directory>
      <outputDirectory>THIRD-PARTY</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../annis-gui/THIRD-PARTY</directory>
      <outputDirectory>THIRD-PARTY</outputDirectory>
    </fileSet>
    <!-- start scripts -->
    <fileSet>
      <directory>src/main/startscripts/</directory>
      <outputDirectory>/</outputDirectory>
      <fileMode>0774</fileMode>
    </fileSet>
  </fileSets>
  
  <dependencySets>
    <!-- our dependcies -->
    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <fileMode>0644</fileMode>
      <unpack>false</unpack>
      <excludes>
        <exclude>de.hu-berlin.german.korpling.annis:annis-gui:war:*</exclude>
      </excludes>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <!-- service -->
    <dependencySet>
      <includes>
        <include>de.hu-berlin.german.korpling.annis:annis-service*:zip</include> 
      </includes>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>conf/database.properties</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <!-- webapp -->
    <dependencySet>
      <includes>
        <include>de.hu-berlin.german.korpling.annis:annis-gui:war:*</include> 
      </includes>
      <outputDirectory>webapp/</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
  </dependencySets>
</assembly>
